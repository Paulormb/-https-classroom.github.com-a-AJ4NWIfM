<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_nest_check"
        android:id="@+id/tv_start_survey"
        android:text="Start New Survey"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_survey"
        app:layout_constraintBottom_toTopOf="@+id/tv_emergency"
        android:id="@+id/tv_nest_check"
        android:text="Nest Check"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_nest_check"
        app:layout_constraintBottom_toTopOf="@+id/tv_start_excavation"
        android:id="@+id/tv_emergency"
        android:text="Emergency Relocation"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_emergency"
        app:layout_constraintBottom_toTopOf="@+id/tv_logout"
        android:id="@+id/tv_start_excavation"
        android:text="Emergency Relocation"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/positive_20dp"
        android:padding="@dimen/positive_20dp"
        android:text="Logout"
        android:background="@drawable/bg_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>