<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_hatching"
        android:id="@+id/tv_adult_emergence"
        android:text="Adult Emergence"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_adult_emergence"
        app:layout_constraintBottom_toTopOf="@+id/tv_found_by_hatching"
        android:id="@+id/tv_hatching"
        android:text="Hatching"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_hatching"
        app:layout_constraintBottom_toTopOf="@+id/tv_inundation"
        android:id="@+id/tv_found_by_hatching"
        android:text="Found by Hatching"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_found_by_hatching"
        app:layout_constraintBottom_toTopOf="@+id/tv_attempted"
        android:id="@+id/tv_inundation"
        android:text="Inundation/Wash"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_inundation"
        app:layout_constraintBottom_toTopOf="@+id/tv_found_by_predation"
        android:id="@+id/tv_attempted"
        android:text="Attempted/Predation"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_attempted"
        app:layout_constraintBottom_toTopOf="@+id/tv_found_by_other"
        android:id="@+id/tv_found_by_predation"
        android:text="Found by Predation"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_found_by_predation"
        app:layout_constraintBottom_toTopOf="@+id/tv_vandalism"
        android:id="@+id/tv_found_by_other"
        android:text="Found by Other"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_found_by_other"
        app:layout_constraintBottom_toTopOf="@+id/tv_other_event"
        android:id="@+id/tv_vandalism"
        android:text="Vandalism"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_vandalism"
        app:layout_constraintBottom_toTopOf="@+id/contain_bottom"
        android:id="@+id/tv_other_event"
        android:text="Other Event"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/contain_bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:textSize="@dimen/text_size_10sp"
            android:padding="@dimen/positive_10dp"
            android:gravity="center"
            android:background="@drawable/bg_button"
            android:layout_margin="@dimen/positive_10dp"
            android:id="@+id/tv_previous"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="@dimen/text_size_10sp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:layout_margin="@dimen/positive_10dp"
            android:padding="@dimen/positive_10dp"
            android:id="@+id/tv_cancel"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="@dimen/text_size_10sp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:layout_margin="@dimen/positive_10dp"
            android:padding="@dimen/positive_10dp"
            android:id="@+id/tv_next"
            android:visibility="invisible"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>