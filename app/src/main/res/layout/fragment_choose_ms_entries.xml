<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_previous_entry"
        android:id="@+id/tv_new_event"
        android:text="Add New Event"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_event"
        app:layout_constraintBottom_toTopOf="@+id/tv_check_nests"
        android:id="@+id/tv_previous_entry"
        android:text="Check Previous Entry"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_previous_entry"
        app:layout_constraintBottom_toTopOf="@+id/tv_emergency_relocation"
        android:id="@+id/tv_check_nests"
        android:text="Check Nests"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_nests"
        app:layout_constraintBottom_toTopOf="@+id/tv_survey_remark"
        android:id="@+id/tv_emergency_relocation"
        android:text="Emergency Relocation"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_emergency_relocation"
        app:layout_constraintBottom_toTopOf="@+id/tv_end_servey"
        android:id="@+id/tv_survey_remark"
        android:text="Add Survey Remark"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/positive_10dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginEnd="@dimen/positive_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_survey_remark"
        app:layout_constraintBottom_toTopOf="@+id/contain_bottom"
        android:id="@+id/tv_end_servey"
        android:text="End Survey"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/contain_bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_10sp"
            android:text="Previous"
            android:background="@drawable/bg_button"
            android:padding="@dimen/positive_10dp"
            android:gravity="center"
            android:layout_margin="@dimen/positive_10dp"
            android:id="@+id/tv_previous"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="@dimen/text_size_10sp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:layout_margin="@dimen/positive_10dp"
            android:padding="@dimen/positive_10dp"
            android:id="@+id/tv_cancel"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="@dimen/text_size_10sp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:layout_margin="@dimen/positive_10dp"
            android:padding="@dimen/positive_10dp"
            android:id="@+id/tv_next"
            android:visibility="invisible"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>