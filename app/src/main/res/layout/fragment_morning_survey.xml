<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Morning Survey"
        android:gravity="center"
        android:textSize="@dimen/text_size_30sp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/positive_10dp"
        android:layout_marginBottom="@dimen/positive_10dp"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/spinner_beach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/positive_50dp"
                android:layout_marginEnd="@dimen/positive_50dp"
                android:hint="Beach"
                app:met_floatingLabel="none"
                android:textColorHint="#CFD8DC"
                android:gravity="center"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/spinner_sector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/positive_50dp"
                android:layout_marginEnd="@dimen/positive_50dp"
                android:layout_marginTop="@dimen/positive_20dp"
                android:hint="Sector"
                app:met_floatingLabel="none"
                android:textColorHint="#CFD8DC"
                android:gravity="center"/>

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="calendar"
                android:layout_marginStart="@dimen/positive_20dp"
                android:layout_marginEnd="@dimen/positive_20dp"
                android:layout_marginTop="@dimen/positive_10dp"/>

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="clock"
                android:layout_marginStart="@dimen/positive_20dp"
                android:layout_marginEnd="@dimen/positive_20dp"
                android:layout_marginTop="@dimen/positive_10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_start_survey"
                android:text="Start new morning survey"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/positive_10dp"
                android:drawablePadding="@dimen/positive_20dp"
                android:drawableStart="@drawable/ic_add"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:background="@drawable/bg_button"
        android:padding="@dimen/positive_10dp"
        android:textSize="@dimen/text_size_10sp"
        android:id="@+id/tv_previous"
        android:layout_marginStart="@dimen/positive_20dp"
        android:layout_marginBottom="@dimen/positive_5dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>